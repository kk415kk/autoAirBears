{
  "manifest_version": 2,

  "name": "Auto Airbears",
  "description": "This extension can be used to automatically authenticate for CalNet services.",
  "version": "1.0",

  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["js/checkAuth.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "main.html"
  }
}
